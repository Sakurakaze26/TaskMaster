<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow (Optional) -->
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="4dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
            <solid android:color="#1A000000" />
        </shape>
    </item>
    <!-- Main Circle with Stroke -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <stroke
                android:width="4dp"
                android:color="@color/black" /> <!-- Change to your desired stroke color -->
        </shape>
    </item>
</layer-list>